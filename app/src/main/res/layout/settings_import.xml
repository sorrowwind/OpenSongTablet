<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/createSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_new_song"
                android:hint="@string/opensong"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/importOnline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/online"
                android:hint="@string/online_services"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/importFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file"
                android:hint="@string/import_other"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/importBulk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/import_bulk"
                android:hint="@string/import_bulk_info"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/importCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/camera"
                android:hint="@string/camera_info"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/importOSB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:hint="@string/import_osb"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/importiOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onsong"
                android:hint="@string/onsong_import"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/importChurch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_church"
                android:hint="@string/respect_copyright"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/importBand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_band"
                android:hint="@string/respect_copyright"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <LinearLayout
                android:id="@+id/browseHostLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                    android:id="@+id/browseHost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/connections_browse_host"
                    android:hint="@string/connections_browse_host_info"
                    app:size="large"/>
                <TableRow style="@style/DividerLine" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>