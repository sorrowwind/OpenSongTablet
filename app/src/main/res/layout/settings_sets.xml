<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/createSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_new"
                android:hint="@string/set_new_info"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/loadSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/load"
                android:hint="@string/set_load_info"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/saveSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:hint="@string/set_save_info"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/renameSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rename"
                android:hint="@string/rename_info"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/deleteSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:hint="@string/set_delete_info"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/bibleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bible"
                android:hint="@string/bible_browse"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/slideButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/custom_slide"
                android:hint="@string/add_custom_slide"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/exportSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/export"
                android:hint="@string/set_share_info"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/importSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/import_basic"
                android:hint="@string/import_from_file"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <LinearLayout
                android:id="@+id/browseHostLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                    android:id="@+id/browseHost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/connections_browse_host"
                    android:hint="@string/connections_browse_host_info"
                    android:visibility="gone"
                    app:size="large"/>

                <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                    android:id="@+id/hostCurrentSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/connections_host_current_set"
                    android:hint="@string/connections_host_current_set_info"
                    app:size="large"/>
                <TableRow style="@style/DividerLine" />

                <TableRow style="@style/DividerLine" />
            </LinearLayout>

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/backupSets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/backup"
                android:hint="@string/backup_info"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                android:id="@+id/restoreSets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/restore"
                android:hint="@string/backup_import"
                app:size="large"/>
            <TableRow style="@style/DividerLine" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
